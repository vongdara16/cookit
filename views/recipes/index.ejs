<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1><%= title %> </h1>
  <table>
    <thead>
      <tr>
        <th>RECIPE NAME: </th>
        <th>AUTHOR: </th>
        <th>DATE CREATED: </th>
      </tr>
    </thead>
    <tbody>
      <% recipes.forEach(recipe => { %>
        <tr>
          <td><a href="/recipes/<%= recipe._id %> "><%= recipe.name %></a></td>
          <td><%= recipe.author.name %></td>
          <td>
            <%const d = new Date(recipe.createdAt) %>
            <%= recipe.createdAt ? d.toDateString() : '' %>
          </td>
        </tr>
      <% }) %> 
    </tbody>
  </table>
</main>

<%- include('../partials/footer') %>
